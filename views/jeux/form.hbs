

<h1>{{title}}</h1>


<form method="post" action="{{#if jeu}}/jeux/modifier/{{jeu.Jeu_id}}{{else}}/jeux/form{{/if}}">
    <div>
        <label>Nom:<br>
            <input type="text" name="nom" required value="{{#if jeu}}{{jeu.nom}}{{/if}}" />
        </label>
    </div>


    <div>
        <label>Description:<br>
            <textarea name="description" rows="4" cols="50">{{#if jeu}}{{jeu.description}}{{/if}}</textarea>
        </label>
    </div>


    <div>
        <label>Date de sortie:<br>
            <input type="date" name="date" value="{{#if jeu}}{{jeu.date}}{{/if}}" />
        </label>
    </div>


    <div>
        <label>Genre:<br>
            <select name="genreId" required>
                <option value="">-- Choisir --</option>
                {{#each genres}}
                    <option value="{{this.id}}" {{#if this.selected}}selected{{/if}}>{{this.nom}}</option>
                {{/each}}
            </select>
        </label>
    </div>


    <div>
        <label>Ã‰diteur:<br>
            <select name="editeurId" required>
                <option value="">-- Choisir --</option>
                {{#each editeurs}}
                    <option value="{{this.id}}" {{#if this.selected}}selected{{/if}}>{{this.nom}}</option>
                {{/each}}
            </select>
        </label>
    </div>


    <div>
        <label>
            <input type="checkbox" name="misEnAvant" {{#if jeu}}{{#if jeu.misEnAvant}}checked{{/if}}{{/if}} /> Mis en avant
        </label>
    </div>


    <div>
        <button type="submit">{{#if jeu}}Enregistrer les modifications{{else}}Ajouter le jeu{{/if}}</button>
        <a href="/jeux">Annuler</a>
    </div>
</form>



