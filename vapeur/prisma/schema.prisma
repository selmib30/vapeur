generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")

}

model Jeu{
  Jeu_id Int @id @default(autoincrement())
  Jeu_nom String
  description String
  date_sortie DateTime
  mis_en_avant Boolean @default(false)

  genreId     Int
  genre       Genre    @relation(fields: [genreId], references: [Genre_id])

  editeurId   Int
  editeur     Editeur  @relation(fields: [editeurId], references: [Editeur_id])
}

model Editeur{
  Editeur_id Int @id @default(autoincrement())
  Editeur_nom String

  jeux Jeu[]
}

model Genre{
  Genre_id Int @id @default(autoincrement())
  Genre_nom String

  jeux Jeu[]
}
