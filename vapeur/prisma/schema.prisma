generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model jeu{
  id Int @id @default(autoincrement())
  nom String
  description String
  date String
  misEnAvant Boolean
  Editeur Editeur @relation(fields: [editeurId], references: [id])
  editeurId Int
  Genre Genre @relation(fields: [genreId], references: [id])
  genreId Int
}

model Editeur{
  id Int @id @default(autoincrement())
  nom String
  jeux jeu[]
}

model Genre{
  id Int @id @default(autoincrement())
  nom String
  jeux jeu[]
} 